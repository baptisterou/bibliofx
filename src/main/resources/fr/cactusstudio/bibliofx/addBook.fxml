<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="fr.cactusstudio.bibliofx.AddEditBookController" spacing="10.0">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    <children>
        <Label text="Ajouter un livre" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints minWidth="350" hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Titre" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <HBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <children>
                        <TextField fx:id="titleField" HBox.hgrow="ALWAYS"/>
                        <Button text="Rechercher" onAction="#onSearchSuggestions"/>
                    </children>
                </HBox>
                <Label text="Auteur" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="authorField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Année" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="yearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Genre" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="genreCombo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="Disponible" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <CheckBox fx:id="availableCheck" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="Statut de lecture" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="readingStatusCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <Label text="Résumé" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextArea fx:id="summaryField" GridPane.rowIndex="6" GridPane.columnIndex="1" prefRowCount="4" wrapText="true"/>
                <Label text="Couverture (URL/chemin)" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="coverUrlField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox spacing="10">
            <children>
                <Button fx:id="okBtn" text="OK" onAction="#onOk" styleClass="primary"/>
                <Button fx:id="cancelBtn" text="Annuler" onAction="#onCancel"/>
            </children>
        </HBox>
    </children>
</VBox>
